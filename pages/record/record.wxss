/* pages/index/index.wxss */

.bar{
  position: fixed;
  top: 0;
  left: 0;
  background: #fff;
  width: 100%;
  z-index: 499;
  padding: 25rpx 0;
  text-align: center;
  font-size: 0;
}
.select_box{
  width: 100%;
  position: relative;
  z-index: 499;
}
.select{
  box-sizing: border-box;
  display: flex;
  text-align: left;
  padding-left: 35rpx;
  color: #00ce9f;
}
.select_text{
  font-size: 30rpx;
  flex: 1;
}
.select_img{
  width: 20rpx;
  height: 20rpx;
  vertical-align: middle
}
.rselect_img{
   width: 20rpx;
  height: 20rpx;
  vertical-align: middle;
  transform:rotate(180deg);
  -ms-transform:rotate(180deg); 	/* IE 9 */
  -moz-transform:rotate(180deg); 	/* Firefox */
  -webkit-transform:rotate(180deg); /* Safari å’Œ Chrome */
  -o-transform:rotate(180deg); 	/* Opera */
}
.option_box{
  position: absolute;
  top: 70rpx;
  width: 100%;
  box-sizing: border-box;
  height: 0;
  overflow-y: hidden;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
}

.seloption{
  display: block;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
  text-align: left;
  padding-left: 35rpx;
  color: #00ce9f;
}
.option{
  display: block;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
  text-align: left;
  padding-left: 35rpx;
}
.select_tick{
  position: relative;
  left: 580rpx;
}
.box{
  background: rgba(0,0,0,0.5);
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width:100%;
  z-index: 496;
}

/* orderform */
.orderview{
  width: 92%;
  min-height: 350rpx;
  background-color: #fff;
  box-shadow: 0rpx 0rpx 10rpx rgba(0,0,0,0.2) ;
  position: relative;
  top: 120rpx;
  left:30rpx;
  margin-bottom:30rpx;
  border-radius:4rpx;
  }
.ordertop,.orderfooter{
  
  position: relative;
  display: block;
  margin: 0 30rpx;
}
.usermsg{
  position: relative;
  display: block;
  margin: 0 30rpx;
  height: 140rpx;
}
.ordertop{
  height: 80rpx;
  width: 92%;
}
.orderstate{
  position: absolute;
  top:30rpx;
  left: 0;
  height: 25rpx;
  font-size: 26rpx;
}

.orderfix{
  position: absolute;
  top:25rpx;
  right: 0rpx;
  width: 60rpx;
  height: 40rpx;
  border: #00ce9f 1px solid;
  color: #00ce9f;
  border-radius:4rpx;
  font-size: 20rpx;
  text-align: center;
  line-height: 40rpx;
}
.orderbuy{
  position: absolute;
  top:25rpx;
  right: 0rpx;
  width: 60rpx;
  height: 40rpx;
  border: #6a7fdb 1px solid;
  color: #6a7fdb;
  border-radius:4rpx;
  font-size: 20rpx;
  text-align: center;
  line-height: 40rpx;
}


.username, .usertel{
  display: inline-block
}
.username{
  margin-top: 30rpx;
  height: 25rpx;
  line-height: 25rpx;
  margin-right:15rpx;
  font-size: 26rpx;
    color:#666666;
}
.usertel{
  font-size: 26rpx;
  color:#666666;
}
.useradd{
  margin-top: 30rpx;
  font-size:30rpx;
  color:#333333;
  font-weight: bold;
 }
.orderfooter{
  border-top:1px solid #f2f2f2;
  margin-top:30rpx;
  height: 120rpx;
  position: relative;
  }
.ordernum{
  position: absolute;
  top: 40rpx;
  left: 0;
  font-size:22rpx;
  color:#999999;
}
.ordertime{
  position: absolute;
  top: 40rpx;
  right: 30rpx;
  font-size:22rpx;
  color:#999999;
}



